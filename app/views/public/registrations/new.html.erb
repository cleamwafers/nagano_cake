<h2>新規会員登録</h2>

<%= form_with model: @customer, url: new_customer_session_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="field"><p>名前
    <%= f.label :"(性)" %>
    <%= f.password_field :last_name, autocomplete: "last_name" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </p>
  </div>

<div class="field"><p>フリガナ
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </p>
  </div>


  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autocomplete: "address",size:"60" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(６文字以上)" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

  <h2>既に登録済みの方</h2><br />

  <p><a href="/customers/sign_in">こちら</a>からログインしてください。</p>
 <% end %>