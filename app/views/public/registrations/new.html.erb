<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :(性)%><br />
    <%= f.password_field :last_name, autocomplete: "last_name" %>
  </div>
  <div class="field">
    <%= f.label :(名)%><br />
    <%= f.password_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :(セイ)%><br />
    <%= f.password_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :(メイ)%><br />
    <%= f.password_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号(ハイフンなし) %><br />
    <%= f.email_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label : 住所 %><br />
    <%= f.email_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号(ハイフンなし) %><br />
    <%= f.email_field :telephone_number, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :パスワード(６文字以上) %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード(確認用) %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

  <h2>既に登録済みの方</h2><br />

  <h3><a href="/customers/sign_in">こちら</a>からログインしてください。</h3>
<% end %>

<%= render "public/shared/links" %>
