<div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <%= image_tag @item.get_image(340,220) %>
    </div>

    <div class="col-xs-6 product-show">
      <div class="product-description">
        <div class="field product-name">
          <h2><%= @item.name %></h2>
        </div>
        <div class="field">
          <%= @item.introduction %>
        </div>
        <div class="field product-price">
          <h3>¥ <%= @item.price.to_s(:delimited) %>
              <span class="tax">(税込)</span>
          </h3>
        </div>
      </div>

      <div class="field">
        <% if @item.is_active == true %>
            <%= form_with model: @cart_item , url: public_cart_items_path, method: :post do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% end %>
          <% else %>
            <h3>売り切れ中</h3>
          <% end %>
      </div>
    </div>
</div>