 <h3><strong>配送先登録/一覧</strong></h3>
 <%= form_with model: @address , url: public_addresses_path do |f| %>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autocomplete: "address",size:"60" %>
  </div>

  <div class="field">
    <%= f.label :"宛名" %>
    <%= f.text_field :name, autocomplete: "name" %>
  </div>
   <%= f.submit "新規登録", class:"btn btn-secondary btn-lg"  %>
<% end %>

 <table border="1" cellspacing="0" cellpadding="0" >
  <tr>
   <th>郵便番号</th>
   <th>住所</th>
   <th>宛名</th>
   <th></th>
  </tr>
  <tbody>
        <% @addresses.each do |address| %>
        <td>
        <%= address.postal_code %>
        </td>
        <td><%= address.address %></td>
        <td>
          <%= address.name %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td>
         <%= link_to edit_public_address_path do %>
          <button class="btn btn-secondary btn-lg" >
            編集する
          </button>
         <% end %>
         <%= link_to public_addresses, method: :delete, data:{confirm: '本当に削除しますか？'} do %>
              <button class="btn btn-secondary btn-lg" >
                削除する
              </button>
            <% end %>
        </td>
          </tr>
          <% @total_price+=  cart_item.subtotal  %>
        <% end %>
      </tbody>
    </table>
