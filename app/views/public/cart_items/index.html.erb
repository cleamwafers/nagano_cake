<h2 class="head-line title_h2 text-center">ショッピングカート</h2>
<div calss="row">
  <div class="col-xs-11" id="no_cart">

    <% if @cart_items.present? %>
    <div class="pull-right margin-bottom">
       <%= link_to public_items_path, method: :delete, data:{confirm: 'カートを空にして本当によろしいですか？'} do %>
             <button class="btn btn-danger" >
              カートを空にする
             </button>
       <% end %>
    </div>
    <table border="1" cellspacing="0" cellpadding="0" >
        <tr class="info">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <td>
        <%= image_tag cart_item.item.get_image(50,50) %>
        <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model: cart_item , url: public_cart_item_path(cart_item) do |f| %>
            <%= f.select :amount, options_for_select((1..10).to_a, {selected: cart_item.amount.to_i}), include_blank: "個数選択" %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to public_items_path, method: :delete, data:{confirm: '本当に削除しますか？'} do %>
              <button class="btn btn-danger" >
                削除する
              </button>
            <% end %>
        </td>
          </tr>
          <% @total_price+=  cart_item.subtotal  %>
        <% end %>
      </tbody>
    </table>
    <div class="col-xs-9 margin-bottom">
      <div class ="action">
        <%= link_to public_items_path do %>
                 <button class="btn btn-primary" >
                   買い物を続ける
                 </button>
                <% end %>
      </div>
    </div>

    <div class="col-xs-3 pull-right billing">
      <table border="1" cellspacing="0" cellpadding="0" >
        <thead>
          <tr>
            <td class="warning">合計金額</td>
            <td class="text-right" id='total_price'>
            <%= @total_price %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-md-4 col-md-offset-4 text-center">
       <%= link_to new_public_order_path do %>
        <button class="btn btn-success" >
         情報入力に進む
        </button>
       <% end %>
    </div>
    <% end %>
  </div>
</div>