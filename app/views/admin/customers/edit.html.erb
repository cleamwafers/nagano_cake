<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-8 offset-md-1">
  <h2><%= @customer.full_name %>さんの会員詳細</h2><br>
   <%= form_with model: @customer,url: admin_customer_path(@customer),method: :patch  do  |f| %>

          <label for="id">会員ID</label>
           <%= @customer.id %><br>

          <label for="name">氏名</label>
            <%= f.text_field :last_name %><%= f.text_field :first_name %><br>

          <label for="kana">フリガナ</label>
            <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %><br>

          <label for="postal_code">郵便番号</label>
            <%=  f.text_field :postal_code %><br>

          <label for="postal_code">住所</label>
            <%=  f.text_area :address %><br>

          <label for="telephone_number">電話番号</label>
            <%=  f.text_field :telephone_number %><br>

          <label for="email">メールアドレス</label>
            <%=  f.text_field :email %><br>

          <label for="is_deleted">会員ステータス</label>
           <%= f.radio_button :is_deleted, "false" %>
           <%= f.label :is_deleted_false, "有効" %>

           <%= f.radio_button :is_deleted, "true" %>
           <%= f.label :is_deleted_true, "無効" %><br>


   <%= button_to "変更を保存", class: "btn btn-primary pull-right" %>
   <% end %>

  </div>
 </div>
</div>