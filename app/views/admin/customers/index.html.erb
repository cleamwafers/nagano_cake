<% provide(:title, "会員一覧") %>
<h2 class="head-line title_h2 text-center">会員一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1">
              <%= customer.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_customer_path(customer), class: "btn-link"  do %>

                <%= customer.full_name %>
              <% end %>
            </td>
            <td class="text-left">
              <%= customer.email %>
            </td>
            <td>
            <% if customer.is_deleted==false %>
            有効
            <% else %>
            退会
　　　　　　<% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <%= paginate(@customers) %>
</div>