<h3>注文履歴一覧</h3>
<div class="row">
<table class="table table-hover">
<% @orders.each do |order|%>
    <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
    </tr>
    <tr>
        <td><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_items.sum(:quantity) %></td>
    </tr>
    <% end %>
</table>
<%= paginate @orders %>
</div>