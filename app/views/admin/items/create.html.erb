<h1>商品新規登録</h1>
  <%= form_with model: Book.new do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :title %>
  <h4>商品説明</h4>
  <%= f.text_area :body %>
  <h4>ジャンル</h4>
  <%= item.genre.name %>
  <h4>税抜価格</h4>
  ¥<%= item.tax_out_price.to_s(:delimited) %>
  <h4>販売ステータス</h4>
  <td class="col-xs-2">
  　<% if item.is_sale == true %>
  　　<p><i class="fas fa-bullseye red"></i>販売中</p>
  　<% elsif item.is_sale == false %>
  　　<p><i class="fas fa-bullseye blue"></i>販売停止中</p>
 　　<% end %>
  　<%= f.submit '新規登録' %>
  <% end %>