<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>商品編集</h2>
   <%= form_with model: @item,url: admin_item_path(@item),method: :patch  do  |f| %>

            <label for="image">商品画像</label>

           <%= f.file_field :image, placeholder: "画像", accept: "image/*" %><br>

            <label for="name">商品名</label>
            <%= f.text_field :name %><br>

            <label for="introduction">商品説明</label><br>
            <%= f.text_area :introduction %><br>

            <label for="genre">ジャンル</label><br>
           <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
            <label for="price">税抜き価格</label><br>
            <%=  f.text_field :price %><br>

 <%= f.submit "変更を保存", class: "btn btn-success" %>
   <% end %>

  </div>
 </div>
</div>