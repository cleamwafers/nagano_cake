<h3 class="head-line title_h2 text-center admin_item_index">商品一覧</h3>
<div class="row">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>

        </tr>
      </thead>
      <tbody>
				<% @items.each do |item| %>
  				<tr>
            <td class="info col-xs-1">
              <%= item.id %>
            </td>
            <td class="text-left">
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td class="text-right col-xs-1">
              <%= item.price %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>