<h3 class="head-line title_h2 text-center admin_item_index">商品一覧</h3>
<div class="row">
    <table class="table table-hover table-bordered table-condensed">
    <%= link_to new_admin_item_path do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル<th>
        </tr>
      </thead>
      <tbody>
				<% @items.each do |item| %>
  				<tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>