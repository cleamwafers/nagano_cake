<% provide(:title, "商品新規登録") %>

<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
    <%= form_for(@item, url: admin_items_path, method: :post, class: "form-horizontal") do |f| %>
      <% if @item.errors.any? %>
        <%= @item.errors.count %>件のエラーが発生しました
       <% @item.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
      <% end %>
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
        <h4>商品画像</h4>
        </div>
  	      <%= f.file_field :image, class: "image" %>
      </div>
      <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction, :cols => 40, :rows => 10  %>
  <h4>ジャンル</h4>
  <!-- f.collection_select :保存先のカラム名, 選択肢に使うオブジェクト, :一つ目の引数に渡す値, :選択肢に使うカラム名, include_blank: "選択して下さい" -->

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>
  <!--    <div class="col-xs-6">-->
        <%#= render "form_item", f: f %>
        <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>

      </div>
    <% end %>
  </div>
</div>
