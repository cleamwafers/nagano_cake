<%# provide(:title, "注文履歴詳細") %>
<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-12" >
      <div class="col-xs-9">

		<div class="field">
		  <div>
			購入者
		    <%= @order.customer.full_name %>
		  </div>
		</div>

	    <div class="field">
	      <div>
	        配送先
	        <%= @order.postal_code %>
	        <%= @order.address %><br>
	        <%= @order.name %>
	      </div>
	    </div>

	    <div class="field">
	      <div>
	        支払い方法
	        <%= @order.pay_type_i18n %>
	      </div>
	    </div>

 	  <%#= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
 	    <!--<div class="col-xs-4">制作ステータス</div>-->
      <!--	  <div class="col-xs-6">-->
      <!--      <%#= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>-->
      <!--    </div>-->

      <!--	<div class="actions">-->
      <!--    <div class="col-xs-2"><%#= f.submit '更新'  ,class: "btn btn-primary" %></div>-->
      <!--	</div>-->

      </div>

	  <div class="buyer-order col-xs-9">
			<table class="table">
			    <thead>
			        <tr class="info">
			          <th class="col-xs-4">商品名</th>
			          <th>単価（税込）</th>
			          <th>数量</th>
			          <th>小計</th>
			          <!--<th>製作ステータス</th>-->

			        </tr>
			    </thead>
				<tbody>
				<% @order_items.each do |order_item| %>
					       <tr>
			            <td class="text-left">
			              <%= order_item.item.name %>
			            </td>
			            <td class="text-right">
			              <%= (order_item.item.price * 1.1).floor %>
			            </td>
			            <td class="text-right">
			              <%= order_item.quantity %>
			            </td>
			            <td class="text-right">
			              <%= order_item.subtotal %>
			            </td>
			            <%#= form_with model: @orders, url: admin_order_details_path(@orders), method: :patch do |f| %>
			            <!--<td>-->
			            	<%#= f.select :produciton_status, OrderItem.produciton_statuses.keys, class: "order_status" %>
			            	<%#= f.submit '更新'  ,class: "btn btn-success" %>
			            <!--</td>-->
			            <%# end %>
			      	  </tr>
				<% end %>
				</tbody>
			</table>
	  </div>

	  <div>
			<table>
				<tr>
            		<th class="info">商品合計</th>
					<td><%= @order.total_payment-@order.shopping_fee %>円</td>
				</tr>
				<tr>
					<th class="info">送料</th>
					<td><%= @order.shopping_fee %>円</td>
				</tr>
				<tr>
					<th class="info">請求金額合計</th>
					<td><%= @order.total_payment %>円</td>

				</tr>
		    </table>
	  </div>

	  </div>
  </div>